<div data-controller="job-form">
  <%= simple_form_for [@job] do |f| %>
    <%= f.collection_select :property_id, @properties, :id, :title, { prompt: "Select a Property" }, class: 'form-select', data: { job_form_target: 'propertySelect', action: 'change->job-form#propertyInfo' } %>
    <div class="mt-4 mb-3">
      <%= f.input :date_of_job, label: false %>
    </div>
    <div class="mt-4 mb-3">
    <%= f.input :price, input_html: { data: { job_form_target: 'propertyPrice' } }, label: false, placeholder: "What is the job price?" %>
    </div>
    <div class="mt-4 mb-3">
    <%= f.input :cleaning_from, input_html: { data: { job_form_target: 'propertyFrom' } }, label: false, placeholder: "Cleaning from" %>
    </div>
    <div class="mt-4 mb-3">
    <%= f.input :cleaning_until, input_html: { data: { job_form_target: 'propertyUntil' } }, label: false, placeholder: "Cleaning until" %>
    </div>
    <div class="mt-4 mb-3">
    <%= f.input :description, :as => :text, :input_html => { 'rows' => 5, 'cols' => 10 }, label: false, placeholder: "Description" %>
    </div>

    <div class="mt-3 text-center mb-3">Please select to who can accept</div>
    <div class="d-flex justify-content-around">
      <button data-action="click->job-form#selectCleaners" data-job-form-target = "cleanersButton" class="btn border border-2">My Cleaners</button>
      <button data-action="click->job-form#eraseCleaners" data-job-form-target = "everyoneButton" class="btn border border-4">Everyone</button>
    </div>
    <div class="mb-3 text-center">
    <%= f.hidden_field :post_all, data: { job_form_target: 'postAll' }  %>
    </div>
    <div class="mb-3 text-center">
    <div data-job-form-target="cleaners" class="list-group"></div>
    </div>
    <%= f.submit class:"btn btn-primary btn-lg btn-block mb-5 w-100 btn-1 " %>
  <% end %>
</div>
