<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" data-controller="navbar">
  <div class="container-fluid justify-content-evenly">
    <%= link_to jobs_path, class: "navbar-brand" do %>
      <%= image_tag "logonavbar.png", alt: "Le Wagon", width: 200, class="margin-right" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
              <%= link_to "Jobs", jobs_path, class: "nav-link" %>
          </li>
          <li class="nav-item" data-navbar-target="myProperties">
            <%= link_to "Properties", properties_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Inbox", chatrooms_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <% if user_signed_in? %>
                <li class="nav-item dropdown">
                  <% if current_user.photo.attached?  %>
                    <a class="nav-link" href="#" data-bs-toggle="dropdown"><%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", height: 35, width: 35, crop: :fill %></a>
                  <% else %>
                    <a class="nav-link" href="#" data-bs-toggle="dropdown"><img src="https://images.nightcafe.studio//assets/profile.png?tr=w-640,c-at_max" alt="Image not found" class= "avatar dropdown-toggle"></a>
                  <% end %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <button
                class="dropdown-item"
                data-action="click->navbar#disableManagerMode"
                data-navbar-target="managerLinkText"
                >
                Switch to Cleaner Mode
              </button>
              <button
                class="dropdown-item d-none"
                data-action="click->navbar#enableManagerMode"
                data-navbar-target="cleanerLinkText"
                >
                Switch to Manager Mode
              </button>
              <%= link_to "My Profile", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
