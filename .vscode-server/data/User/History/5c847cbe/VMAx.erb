  <div data-controller='select-user'></div>
  <%= simple_form_for(@property) do |f| %>
    <%= f.input :title, label: false, placeholder: "Title"  %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :default_job_price %>
    <%= f.input :default_cleaning_from %>
    <%= f.input :default_cleaning_until %>

    <%= f.simple_fields_for :teams do |tf| %>
      <h2 class="m-2">Your team! ğŸ‘¬</h2>

      <h4 class="mt-4">Already have a cleaner?</h4>
      <%= tf.input :cleaner_id, collection: User.all.map { |user| [user.first_name, user.id] }, input_html: {multiple: true, data: {controller: "tom-select", tom_select_options_value: {tags: true}}} %>

      <h4 class="mt-4">Already have a Manager?</h4>
      <%= tf.input :manager_id, collection: User.all.map { |user| [user.first_name, user.id] }, input_html: {multiple: true, data: {controller: "tom-select", tom_select_options_value: {tags: true}}} %>
    <% end %>

    <%= f.input :photo, as: :file %>

    <%= f.submit %>
<% end %>
