<body>
<h1 classd-flex flex-column justify-content-center w-100 h-100 fw-light text-white m-0">Your Properties 🏠</h1>


<div class="container">
  <ul class="list-group">
    <% @properties.each do |property| %>
      <li class="list-group-item property-item d-flex justify-content-between align-items-center">
        <%= property.title %>
        <div class="btn-group">
        <%= link_to "Check this property", property_path(property), class: "btn btn-primary rounded-pill btn-1" %>
        <%= link_to "Edit", edit_property_path(property), class: 'btn btn-warning text-white rounded-pill btn-1' %>
        <%= link_to "Delete", property_path(property), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger text-white rounded-pill btn-1' %>
      </li>
    <% end %>
  </ul>
  <div class="button mt-4">
    <%= link_to 'Add a new Property', new_property_path %>
  </div>
</body>
