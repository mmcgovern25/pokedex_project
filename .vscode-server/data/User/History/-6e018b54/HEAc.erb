<div data-controller="filter-jobs">
  <div class="d-flex flex-column justify-content-center align-items-center" style="margin-top: 40px; padding: 10px">
    <h1>Your jobs</h1>
    <p style="margin-bottom: 30px;">jobs home page</p>
  </div>
  <div class="container">
    <div class="d-flex justify-content-around">
      <button class="btn-1 btn-primary" data-action="filter-jobs#filter" data-filter="open">Open</button>
      <button data-action="filter-jobs#filter" data-filter="applied">Applied</button>
      <button data-action="filter-jobs#filter" data-filter="accepted">Accepted</button>
      <button data-action="filter-jobs#filter" data-filter="completed">Completed</button>
    </div>
    <div class="text-center mt-3">
      <% if session[:user_role] == "manager" %>
        <%= link_to "Create Job", new_job_path, class:"btn btn-primary btn-lg btn-block mb-5 w-100 btn-1" %>
      <% end %>
    </div>
  </div>

  <div class="container d-flex flex-column justify-content-center align-items-center" >
    <ul id="jobList">
      <div data-filter-jobs-target="jobsOfStatus">
        <%= render partial: 'job_list', locals: { jobs: @jobs } %>
      </div>
    </ul>
  </div>
</div>
