{
	"name": "rainbow-tags",
	"displayName": "Rainbow Tags",
	"description": "Rainbow Tags",
	"publisher": "voldemortensen",
	"repository": "https://gitlab.com/voldemortensen/rainbow-tags",
	"version": "0.4.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:extension.rainbowTags"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"title": "Rainbow Tags",
			"properties": {
				"rainbowTags.colors": {
					"type": "array",
					"default": [
						"#e6b422",
						"#c70067",
						"#00a960",
						"#fc7482"
					],
					"items": {
						"type": "string"
					},
					"minItems": 1,
					"description": "An array of HEX color codes for the tag highlighting. Unlimited possibilities.",
					"scope": "window"
				},
				"rainbowTags.hightlightType": {
					"type": "string",
					"default": "color",
					"enum": [
						"color",
						"background-color",
						"border"
					],
					"description": "Highlighting graphical style of choice. Default \"color\"",
					"scope": "window"
				},
				"rainbowTags.allowEverywhere": {
					"type": "boolean",
					"default": false,
					"description": "Determines if the highting is supported only in XML-typed languages or in all documents with all languages. Allowing this might lead to unforseen circumstances with anything resembling XML/HTML tag structures, eg: TS types, eg: \"const stuff: <CustomType>\"",
					"scope": "window"
				},
				"rainbowTags.supportedLanguages": {
					"type": "array",
					"default": [
						"html",
						"php",
						"twig",
						"blade",
						"smarty",
						"xml",
						"vue"
					],
					"items": {
						"type": "string"
					},
					"minItems": 1,
					"uniqueItems": true,
					"description": "Supported language IDs.",
					"scope": "window"
				},
				"rainbowTags.denylistTags": {
					"type": "array",
					"default": [
						"!DOCTYPE",
						"html",
						"head",
						"meta",
						"body",
						"title",
						"link",
						"script",
						"base",
						"style",
						"area",
						"br",
						"col",
						"embed",
						"hr",
						"img",
						"input",
						"param",
						"source",
						"track",
						"wbr"
					],
					"items": {
						"type": "string"
					},
					"uniqueItems": true,
					"description": "Excluded tags.",
					"scope": "window"
				}
			}
		},
		"commands": [
			{
				"command": "extension.rainbowTags",
				"title": "Rainbow Tags"
			}
		]
	},
	"scripts": {
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.59",
		"@types/vscode": "1.30.0",
		"diff": "^4.0.1",
		"eslint": "^8.1.0",
		"eslint-config-standard": "^14.1.0",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-node": "^11.0.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"prettier": "1.17.1",
		"typescript": "^3.7.3",
		"vscode-test": "1.4.0"
	},
	"__metadata": {
		"id": "7fcdf7df-2a48-408f-b3a8-ac8a8dffbf00",
